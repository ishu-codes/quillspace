generator client {
  provider = "prisma-client-js"
  // output   = "../src/database/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int        @id @default(autoincrement())
  authorId    String
  title       String
  desc        String
  content     String
  featuredImg String
  slug        String     @unique
  status      String     @default("draft") // draft, published, archived
  lists       PostList[]
  publishedAt DateTime?
  viewsCount  Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  author    User       @relation("AuthorPosts", fields: [authorId], references: [id])
  comments  Comment[]
  tags      PostTag[]
  reactions Reaction[]
  bookmarks Bookmark[]
}

model List {
  id         String     @id @default(uuid())
  authorId   String
  title      String
  desc       String?
  isPublic   Boolean    @default(false)
  itemsCount Int        @default(0)
  posts      PostList[]
  createdAt  DateTime   @default(now())

  author User @relation("AuthorLists", fields: [authorId], references: [id])
}

model PostList {
  postId Int
  listId String

  post Post @relation(fields: [postId], references: [id])
  list List @relation(fields: [listId], references: [id])

  @@id([postId, listId])
}

model UserSavedList {
  userId String
  listId String

  @@id([userId, listId])
}

model Comment {
  id              Int      @id @default(autoincrement())
  userId          String
  postId          Int
  content         String
  parentCommentId Int? // nullable for root comments
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user          User       @relation(fields: [userId], references: [id])
  post          Post       @relation(fields: [postId], references: [id])
  parentComment Comment?   @relation("CommentReplies", fields: [parentCommentId], references: [id])
  replies       Comment[]  @relation("CommentReplies")
  reactions     Reaction[]
}

model Tag {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())

  posts PostTag[]
}

model PostTag {
  postId Int
  tagId  Int

  post Post @relation(fields: [postId], references: [id])
  tag  Tag  @relation(fields: [tagId], references: [id])

  @@id([postId, tagId])
}

model Reaction {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int?
  commentId Int?
  type      String   @default("like") // like, clap, heart, etc.
  createdAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id])
  post    Post?    @relation(fields: [postId], references: [id])
  comment Comment? @relation(fields: [commentId], references: [id])
}

model Follow {
  id          Int      @id @default(autoincrement())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower  User @relation("FollowerFollows", fields: [followerId], references: [id])
  following User @relation("FollowingFollows", fields: [followingId], references: [id])
}

model Bookmark {
  id        Int      @id @default(autoincrement())
  userId    String
  postId    Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  post Post @relation(fields: [postId], references: [id])

  // @@id([userId, postId])
}

model UserInfo {
  username String  @id
  userId   String  @unique
  bio      String?
  role     String  @default("user")

  user User @relation(fields: [userId], references: [id])
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  userInfo  UserInfo?
  posts     Post[]     @relation("AuthorPosts")
  lists     List[]     @relation("AuthorLists")
  comments  Comment[]
  reactions Reaction[]
  follows   Follow[]   @relation("FollowerFollows")
  followers Follow[]   @relation("FollowingFollows")
  bookmarks Bookmark[]

  sessions Session[]
  accounts Account[]

  @@map("user")
}

model Session {
  id        String   @id
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
